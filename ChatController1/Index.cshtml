@{
    ViewData["Title"] = "Index";
}
<div class="container mt-5 p-4 shadow rounded bg-light">
    <h2 class="text-center mb-4">Chat Interface</h2>

    <div class="row mb-3">
        <label for="user-input" class="col-sm-2 col-form-label">User:</label>
        <div class="col-sm-10">
            <input type="text" id="user-input" class="form-control" placeholder="Enter username" />
        </div>
    </div>

    <div class="row mb-3">
        <label for="message-input" class="col-sm-2 col-form-label">Message:</label>
        <div class="col-sm-10">
            <input type="text" id="message-input" class="form-control" placeholder="Enter message" />
        </div>
    </div>

    <div class="row">
        <div class="col text-center">
            <button id="send-button" class="btn btn-primary w-50">Send Message</button>
        </div>
    </div>

    <ul id="message-list" class="list-unstyled mt-4">
        <!-- Messages will be added here -->
    </ul>
</div>

@section Scripts {
    <script src="~/microsoft/signalr/dist/browser/signalr.js"></script>
    <script src="~/js/chat.js"></script>
}
